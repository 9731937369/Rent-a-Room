<div class = "container">
<% if user_signed_in? && (can? :create, Amenity.new) %>
<a href="/amenities/new">Add Amenity</a>
<% end %>
</br></br></br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td><%= link_to amenity.name, amenity_path(amenity.slug) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @amenities %>
</div>