<div class = "container">
<div class = "col-md-8">
	<% if @bookings.empty? %>
	<div class="items">
        <h1>You have not done any bookings.</h1>
    </div>
	<% else %>
		<table class = "table">
		<tr>
			<th>Name</th>
			<th>Start-Date</th>
			<th>End-Date</th>
			<th>Price</th>
			<th>Approved</th>
		</tr>
		<% @bookings.each do |book| %>
			<tr>
				<td><%= link_to book.room.name, room_path(book.room.slug) %></td>
				<td> <%= book.start_date %></td>
				<td><%= book.end_date %></td>
				<td><%= book.price %></td>
				<td><% if book.is_confirmed? %>Yes<% else %>No<% end %></td>
			<tr>
		<% end %>
		</table>
	<% end %>
</div></div>