<h1>Listing Cities</h1>
<br>
<% if user_signed_in? && (can? :create, City.new)%>
<%= link_to 'New City', new_city_path %>
<% end %>
<%= will_paginate @cities %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to 'Show', city %></td>
        <% if user_signed_in? &&%>
          <% if can? :update, city %>
            <td><%= link_to 'Edit', edit_city_path(city) %></td>
          <% end %>
          <% if can? :destroy, city %>
            <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

