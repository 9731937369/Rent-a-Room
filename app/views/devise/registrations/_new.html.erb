<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="group">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, autocomplete: "off", class: "input" %>
    <span id="userNameMsg"></span>
  </div>
  <div class="group">
    <%= f.label :email, class:"label" %>
    <%= f.email_field :email, autofocus: true,  autocomplete: "off", class: "input" %>
    <span id="emailMsg"></span>
  </div>
  <div class="group">
    <%= f.label :mobile, class: "label" %>
    <%= f.text_field :mobile, class: "input", autocomplete: "off"  %>
    <span id="mobileMsg"></span>
  </div>
  <div class="group">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "off", class: "input" %>
    <span id="passwordMsg"></span>
  </div>
  <div class="group">
    <label for="pass" class="label">Repeat Password</label>
    <input id="pass" type="password" class="input" data-type="password">
  </div>
   
  <div class="group">
    <input type="submit" class="button" value="Sign Up">
  </div>
<%end%>

