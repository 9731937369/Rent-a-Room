<%= form_tag('/enquiries') do %>
  <div class="col-sm-8 form-group">
    <input class="form-control" id="subject" name="subject" placeholder="Subject" type="text" required>
  </div>
  <div class="col-sm-8 form-group">
    <input class="form-control" id="email" name="email" placeholder="Email" type="email" required>
  </div>
  <div class="col-sm-8">
    <textarea class="form-control" id="description" name="description" placeholder="Description" rows="3"></textarea><br/>
    <center><input class="btn btn-success" type="submit"></center>
  </div>
<% end %>