<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Rules</th>
      <th>Address</th>
      <th>Images</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>City</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= room.price %></td>
        <td><%= room.rules %></td>
        <td><%= room.address %></td>
        <td><%= room.images %></td>
        <td><%= room.latitude %></td>
        <td><%= room.longitude %></td>
        <td><%= room.city_id %></td>
        <td><%= room.user_id %></td>
        <td><%= link_to 'Show', room %></td>
        <% if user_signed_in? %>
              <% if can? :update, room %>
                   <td><%= link_to 'Edit', edit_room_path(room) %></td>
              <% end %>
              <% if can? :destroy, room %>
                  <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && (can? :create, Room.new)%>
  <%= link_to 'New Room', new_room_path %>
<% end %>
