 <script>
	var roomsHandle = document.getElementById('rooms');
	var roominputs = roomsHandle.getElementsByTagName('input');
	var roomListHandle = document.getElementById('roomlist');
	
	function buildProductHtml(rooms){
		roomlist.innerHTML = "";
		rooms.forEach(function(room){
			var li = document.createElement('li');
			var a = document.createElement('a');
			var href = document.createAttribute('href');
			href.value = `/rooms${room.id}`;
			a.setAttributeNode(href);
			var text = document.createTextNode(room.name);
			a.appendChild(text);
			li.appendChild(a);
			roomListHandle.appendChild(li);
		});
	}
	
	roomsHandle.addEventListener('click', function(){
		var roomselected = 0;
		for(var i = 0; i < roominputs.length; i++){
			if(roominputs[i].checked){
				roomselected = roominputs[i].value;
			}
		}
		var xhr = new XMLHttpRequest();
		xhr.open('GET', '../rooms/find_by_cities?city_id=' + roomselected);
		xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status == 200){
				buildProductHtml(JSON.parse(xhr.responseText));
			}
		}
		xhr.send();
	}, false);

