 <% if user_signed_in? && (can? :create, Room.new)%>
  <a href="/rooms/new" style="float:right;"><img src="/add.png" width=30px;height=30px;></a>
<% end %>

<% @roomarray.each do |room| %>
	<% if room.is_authorized == true %>
		<table><tr><th></th><th></th></tr>
			<tr><td><%=  image_tag(room.images, :size => "460x280", :crop => :fill, :alt => "no image") %></td>
			<td><h2><b>Name : </b><i><%= link_to room.name, room%></i></h2><br><b>Address : </b><%= room.address %>
			<br><br/><b>City : </b><%= room.city.name%><br/><br/><b>Description :</b> <%= room.description %><br><br>
			<b>Owner : </b> <%= room.user.username.capitalize %><br/></br><b>Contact : </b><%= room.user.mobile%></td></tr>
		</table>
	<% end %>
<% end %>
<%= will_paginate @roomarray %>